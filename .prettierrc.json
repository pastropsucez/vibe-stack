{
  "semi": false,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "ignore": [
    "__generated__",
    ".next",
    "next.config.ts"
  ],
  "importOrder": [
    "^([\"'])",
    "<TYPES>^(node:)",
    "<BUILTIN_MODULES>",
    "",
    "<TYPES>",
    "<TYPES>^[^@.]/",
    "<THIRD_PARTY_MODULES>",
    "",
    "<TYPES>^@/lib/",
    "^@/lib/",
    "",
    "<TYPES>^[.]",
    "^@/public/",
    "^@/components/",
    "^@/convex/",
    "^@/app/",
    "^[.]"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
