{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(npm run:*)",
      "Bash(npx convex:*)",
      "Bash(npx shadcn:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(./src/**)",
      "Read(./app/**)",
      "Read(./components/**)",
      "Read(./convex/**)",
      "Read(./lib/**)",
      "Edit(./src/**)",
      "Edit(./app/**)",
      "Edit(./components/**)",
      "Edit(./convex/**)",
      "Edit(./lib/**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Edit(./.env)",
      "Edit(./.env.*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm remove:*)",
      "Bash(npx convex deploy:*)"
    ]
  },
  "env": {
    "NODE_ENV": "development"
  }
}
